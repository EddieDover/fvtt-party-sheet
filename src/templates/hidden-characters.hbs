<form autocomplete="off" class="fvtt-party-sheet-hc-form standard-form" style="padding:2px;">
  <div>{{localize "fvtt-party-sheet.hide-sheet.tooltip"}}</div>
  <div style="padding-bottom:0.5rem;">
    <div style="display:flex;flex-direction:row;flex-wrap:nowrap;align-items:center;">
      <input type="checkbox" id="fvtt-party-sheet-assigned-only" name="fvtt-party-sheet-assigned-only" {{#if showAssignedOnly}}checked{{/if}}>
      <label for="fvtt-party-sheet-assigned-only" title="{{localize "fvtt-party-sheet.party-sheet.assigned-only-tooltip"}}">{{localize "fvtt-party-sheet.party-sheet.assigned-only"}}</label>
    </div>
    <hr>
  </div>
    
  {{#each actorTypes}}
    {{!-- Not excluded, render normally --}}
    {{#ifCond ../characters 'someType' this}}
      <div style="display:flex;flex-direction:row;flex-wrap:nowrap;align-items:center;padding-bottom:0.5rem;">
        <h4 style="margin-bottom:0px;">Type: {{this}}</h4>
        <div style="display:flex;flex-direction:row;flex-wrap:nowrap;align-items:center;padding-left:0.25rem;">
          <input type="checkbox" class="hidden-type-toggle" id="character-type-{{this}}" name="character-type-{{this}}" {{#inArray this ../hiddenTypes}}checked{{/inArray}}>
          <label for="character-type-{{this}}" title="{{localize "fvtt-party-sheet.hide-sheet.hide-all"}}">{{localize "fvtt-party-sheet.hide-sheet.hide-all"}}</label>
        </div>
      </div>
      <section class="fvtt-party-sheet-hc-section">
      {{#each ../characters as |character|}}
        {{#ifCond character.type '==' ../this}}
        <div class="fvtt-party-sheet-hc-item">
          <input type="checkbox" name="character-{{character.uuid}}" value="{{character.uuid}}" class="hidden-character" id="hidden-character-{{character.uuid}}" {{#hccontains character.uuid hiddenCharacters}}checked{{/hccontains}}>
          <label for="hidden-character-{{character.uuid}}">{{character.name}}</label>
        </div>
        {{/ifCond}}
      {{/each}}
    </section>
    <hr>
    {{/ifCond}}
  {{/each}}
  <button type="button" name="submit" data-action="onSubmit">
    <i class="fas fa-save"></i> Save
  </button>
</form>
