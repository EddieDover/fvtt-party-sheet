{
  "name": "CnC",
  "system": "castles-and-crusades",
  "author": "PhildoBaggins",
  "version": "1.0.0",
  "minimumSystemVersion": "1.0.5",
  "offline_excludes": ["monster", "npc", "base", "vehicle", "group"],
  "rows": [
    [
      {
        "name": "Character Sheet",
        "type": "charactersheet",
        "header": "hide",
        "text": ""
      },
      {
        "name": "Name/Class",
        "type": "direct",
        "header": "show",
        "text": "name {newline} system.class.value"
      },
      {
        "name": "Features",
        "type": "object-loop",
        "header": "show",
        "text": "items{feature} => name {nl}"
      },
      {
        "name": "Level",
        "type": "direct",
        "header": "show",
        "text": "system.level.value"
      },
      {
        "name": "STR",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.str.value {newline} system.abilities.str.bonus"
      },
      {
        "name": "DEX",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.dex.value {newline} system.abilities.dex.bonus"
      },
      {
        "name": "CON",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.con.value {newline} system.abilities.con.bonus"
      },
      {
        "name": "INT",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.int.value {newline} system.abilities.int.bonus"
      },
      {
        "name": "WIS",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.wis.value {newline} system.abilities.wis.bonus"
      },
      {
        "name": "CHA",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.cha.value {newline} system.abilities.cha.bonus"
      },
      {
        "name": "AC",
        "type": "direct",
        "header": "show",
        "text": "system.armorClass.value"
      }
    ]
  ]
}
