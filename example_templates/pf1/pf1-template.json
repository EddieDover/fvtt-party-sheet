{
  "name": "Pathfinder 1e Party Sheet",
  "system": "pf1",
  "author": "LeCuay",
  "offline_excludes": ["basic", "haunt", "npc", "trap", "vehicle"],
  "rows": [
    [
      {
        "name": "Character Sheet",
        "type": "charactersheet",
        "header": "hide",
        "text": ""
      },
      {
        "name": "Name",
        "type": "direct",
        "header": "show",
        "text": "name {newline} {i} race.name {/i}"
      },
      {
        "name": "STR",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.str.value"
      },
      {
        "name": "DEX",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.dex.value"
      },
      {
        "name": "CON",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.con.value"
      },
      {
        "name": "INT",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.int.value"
      },
      {
        "name": "WIS",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.wis.value"
      },
      {
        "name": "CHA",
        "type": "direct",
        "header": "show",
        "text": "system.abilities.cha.value"
      },
      {
        "name": "AC",
        "type": "direct",
        "header": "show",
        "text": "system.attributes.ac.normal.total"
      },
      {
        "name": "Fortitude",
        "type": "direct",
        "header": "show",
        "text": "system.attributes.savingThrows.fort.total"
      },
      {
        "name": "Vision",
        "type": "direct-complex",
        "header": "show",
        "text": [
          {
            "type": "match",
            "ifdata": "system.traits.senses.ll.enabled",
            "matches": true,
            "text": "Low-light vision {newline}"
          },
          {
            "type": "exists",
            "value": "system.traits.senses.dv",
            "text": "Darkvision system.traits.senses.dv ft. {newline}"
          },
          {
            "type": "exists",
            "value": "system.traits.senses.tr",
            "text": "Tremorsense system.traits.senses.ts ft. {newline}"
          },
          {
            "type": "exists",
            "value": "system.traits.senses.bse",
            "text": "Blindsense system.traits.senses.bse ft. {newline}"
          },
          {
            "type": "exists",
            "value": "system.traits.senses.bs",
            "text": "Blindsight system.traits.senses.bs ft. {newline}"
          },
          {
            "type": "exists",
            "value": "system.traits.senses.sc",
            "text": "Scent system.traits.senses.sc ft. {newline}"
          },
          {
            "type": "exists",
            "value": "system.traits.senses.ts",
            "text": "True seeing system.traits.senses.ts ft. {newline}"
          }
        ]
      }
    ],
    [
      {
        "name": "Spacer1",
        "type": "direct",
        "header": "hide",
        "text": ""
      },
      {
        "name": "Classes",
        "type": "object-loop",
