        "header": "show",
        "text": "{system.body_parts.legR.injuries}"
      },
      {
        "name": "XP",
        "type": "direct",
        "align": "left",
        "valign": "top",
        "header": "show",
        "text": "Curr: {system.level.currentXP} {newline} Next: {system.level.nextLevelXP}"
      },
      {
        "name": "Wealth2",
        "type": "direct",
        "align": "left",
        "valign": "top",
        "header": "hide",
        "text": "Other: {system.currency.other}"
      },
      {
        "name": "Status",
        "type": "array-string-builder",
        "align": "left",
        "valign": "top",
        "maxwidth": 125,
        "header": "hide",
        "text": "statuses => {value}, "
      }
    ]
