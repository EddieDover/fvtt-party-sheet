{
  "name": "Fallout 2d20 - With Movement",
  "system": "fallout",
  "author": "Michael Card (EmoCthulhu)",
  "version": "1.1.0",
  "minimumSystemVersion": "11.12.2",
  "offline_excludes": ["npc", "base", "creature"],
  "rows": [
    [
      {
        "name": "Character Sheet",
        "type": "charactersheet",
        "align": "center",
        "header": "hide",
        "text": ""
      },
      {
        "name": "Name",
        "type": "direct",
        "align": "left",
        "valign": "top",
        "minwidth": 110,
        "maxwidth": 150,
        "header": "show",
        "text": "{b} {name} {/b} {newline} Level: {system.level}"
      },
      {
        "name": "Health",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "minwidth": 60,
        "header": "show",
        "text": "{b} {system.health.value} {/b} / {system.health.max}"
      },
      {
        "name": "S",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "minwidth": 60,
        "header": "show",
        "text": "{b} {system.attributes.str} {/b}"
      },
      {
        "name": "P",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "minwidth": 40,
        "header": "show",
        "text": "{b} {system.attributes.per} {/b}"
      },
      {
        "name": "E",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "minwidth": 40,
        "header": "show",
        "text": "{b} {system.attributes.end} {/b}"
      },
      {
        "name": "C",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "minwidth": 40,
        "header": "show",
        "text": "{b} {system.attributes.cha} {/b}"
      },
      {
        "name": "I",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "minwidth": 40,
        "header": "show",
        "text": "{b} {system.attributes.int} {/b}"
      },
      {
        "name": "A",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "minwidth": 40,
        "header": "show",
        "text": "{b} {system.attributes.agi} {/b}"
      },
      {
        "name": "L",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "minwidth": 40,
        "header": "show",
        "text": "{b} {system.attributes.luc} {/b}"
      },
      {
        "name": "Move",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "header": "show",
        "text": "{system.unofficialSpeed}"
      },
      {
        "name": "Wealth",
        "type": "direct",
        "align": "left",
        "valign": "top",
        "header": "show",
        "text": "Caps: {system.currency.caps}"
      },
      {
        "name": "Status(es)",
        "type": "direct",
        "header": "show",
        "text": ""
      }
    ],
    [
      {
        "name": "blank1",
        "type": "direct",
        "header": "hide",
        "text": ""
      },
      {
        "name": "Details",
        "type": "direct",
        "align": "left",
        "valign": "top",
        "minwidth": 110,
        "maxwidth": 150,
        "header": "show",
        "text": "Origin: {system.origin} {newline} Type: {type}"
      },
      {
        "name": "Rads",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "header": "show",
        "text": "{system.radiation}"
