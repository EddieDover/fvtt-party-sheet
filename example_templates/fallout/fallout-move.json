        "header": "show",
        "text": "{system.body_parts.armL.injuries}"
      },
      {
        "name": "ArmR/Arm2",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "header": "show",
        "text": "{system.body_parts.armR.injuries}"
      },
      {
        "name": "Torso",
        "type": "direct",
        "align": "center",
        "valign": "top",
        "header": "show",
        "text": "{system.body_parts.torso.injuries}"
      },
      {
        "name": "LegL/Arm3",
        "type": "direct",
